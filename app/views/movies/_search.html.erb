<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
    <%= form_tag search_movies_path, {method: :get, class: "form", id: "search-movies-form"} do %> 
      <div class = "form-group">
        <%= label_tag :query, "Search:", class: "control-label" %>
        <%= text_field_tag :query, nil, class: "form-control" %>
      </div>
      <div class = "form-group">
        <%= label_tag :duration, "Duration:", class: "control-label" %>
        <%= select_tag "duration", "<option value='all' selected='selected'>Any</option><option value='short'>Under 90 minutes</option><option value='medium'>Between 90 and 120 minutes</option><option value='long'>Over 120 minutes</option>".html_safe, {class: "form-control"} %>
      </div>
        <%= submit_tag "Search", class: "btn btn-default" %> 
    <% end %>
    </div>
  </div>
</div>




