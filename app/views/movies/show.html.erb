
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @movie.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <%= link_to image_tag(@movie.poster_url.to_s, class:"image-responsive"), movie_path(@movie) %>
    </div>
    <div class="col-sm-8">
      <h4>(<%= @movie.review_average %>/10)</h4>
      <h4>Directed by <%= @movie.director %></h4>
      <h4><%= @movie.runtime_in_minutes %> minutes</h4>
      <h4><%= formatted_date(@movie.release_date) %></h4>
      <p><%= @movie.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h3>Reviews</h3>
      <% if current_user %>
        <p><%= link_to "Write a review!", new_movie_review_path(@movie) %></p>
      <% else %>
        <p>Please <%= link_to "log in", new_session_path %> to write a review.</p> 
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <%= render @movie.reviews %>
      </div>
    </div>
  </div>
</div>