<tr>
  <td><%= movie.id %></td>
  <td><%= movie.title %></td>
  <td><%= movie.director %></td>
  <td><%= movie.runtime_in_minutes %></td>
  <td><%= movie.release_date %></td>
  <td><%= movie.description %></td>
  <td><%= movie.poster %></td>
  <td><%= link_to "View", movie_path(movie) %></td>
  <td><%= link_to "Edit", edit_admin_movie_path(movie) %></td>
  <td><%= link_to "Delete", admin_movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>