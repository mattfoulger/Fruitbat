<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Admin Panel</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active"><%= link_to "User List", admin_users_path %></li>
        <li role="presentation"><%= link_to "Create User", new_admin_user_path %></li>
      </ul>
    </div>
  </div>
  <div class="row top-buffer">
    <div class="col-sm-12">
      <table class="table table-hover">
      <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Admin?</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
        
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.admin %></td>
          <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
          <td><%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to "Impersonate", session_path(user), method: :patch %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>