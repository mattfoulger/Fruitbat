<tr>
  <td><%= user.id %></td>
  <td><%= user.firstname %></td>
  <td><%= user.lastname %></td>
  <td><%= user.role %></td>
  <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
  <td><%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <td>
    <% unless user.admin %>
    <%= link_to "Impersonate", session_path(user), method: :patch %>
    <% end %>
  </td>
</tr>